<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToWidth="true" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="erp.controller.AcompanhamentoController">
   <content>
      <VBox spacing="15.0" style="-fx-padding: 25;">
         <children>
            <Label text="Acompanhamento de Pedidos">
               <font><Font name="System Bold" size="22.0" /></font>
            </Label>
            
            <TableView fx:id="tblPedidos" prefHeight="175.0">
               <columns>
                  <TableColumn fx:id="colPedidoId" prefWidth="75.0" text="Pedido ID" />
                  <TableColumn fx:id="colDataPedido" prefWidth="120.0" text="Data" />
                  <TableColumn fx:id="colFornecedor" prefWidth="300.0" text="Fornecedor" />
                  <TableColumn fx:id="colCustoTotal" prefWidth="150.0" text="Custo Total" />
                  <TableColumn fx:id="colStatus" prefWidth="200.0" text="Status" />
               </columns>
               <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
            </TableView>
            
            <Separator prefWidth="200.0" />
            <Label text="Itens do Pedido">
               <font><Font name="System Bold" size="22.0" /></font>
            </Label>
            
            <HBox spacing="15.0">
               <children>
                  <TableView fx:id="tblItensPedido" HBox.hgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="colItemProduto" prefWidth="350.0" text="Produto" />
                        <TableColumn fx:id="colItemQtdPedida" prefWidth="120.0" text="Quant. Pedida" />
                        <TableColumn fx:id="colItemQtdRecebida" prefWidth="130.0" text="Quant. Recebida" />
                        <TableColumn fx:id="colItemCustoUnit" prefWidth="120.0" text="Custo Unit." />
                     </columns>
                     <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                  </TableView>
                  <VBox alignment="TOP_CENTER" spacing="10.0">
                     <children>
                        <Button fx:id="btnRegistrarChegada" mnemonicParsing="false" prefWidth="150.0" style="-fx-base: #28a745;" text="Registrar Chegada..." />
                     </children>
                  </VBox>
               </children>
            </HBox>
            
            <Separator prefWidth="200.0" />

            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Itens Pendentes">
                     <font>
                        <Font name="System Bold" size="22.0" />
                     </font>
                  </Label>
                  <Region HBox.hgrow="ALWAYS" />
                  <Label fx:id="lblTotalPendentes" style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Total: 0" />
               </children>
            </HBox>
            <TableView fx:id="tblItensPendentes">
               <columns>
                  <TableColumn fx:id="colPendenteClube" prefWidth="150.0" text="Clube" />
                  <TableColumn fx:id="colPendenteModelo" prefWidth="250.0" text="Modelo" />
                  <TableColumn fx:id="colPendenteTipo" prefWidth="100.0" text="Tipo" />
                  <TableColumn fx:id="colPendenteP" minWidth="50.0" prefWidth="50.0" text="P" />
                  <TableColumn fx:id="colPendenteM" minWidth="50.0" prefWidth="50.0" text="M" />
                  <TableColumn fx:id="colPendenteG" minWidth="50.0" prefWidth="50.0" text="G" />
                  <TableColumn fx:id="colPendenteGG" minWidth="50.0" prefWidth="50.0" text="GG" />
                  <TableColumn fx:id="colPendente2GG" minWidth="50.0" prefWidth="50.0" text="2GG" />
                  <TableColumn fx:id="colPendente3GG" minWidth="50.0" prefWidth="50.0" text="3GG" />
                  <TableColumn fx:id="colPendente4GG" minWidth="50.0" prefWidth="50.0" text="4GG" />
                  <TableColumn fx:id="colPendenteTotal" prefWidth="75.0" text="Total" />
               </columns>
               <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </content>
</ScrollPane>