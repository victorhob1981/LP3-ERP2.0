<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="500.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="erp.EstoqueController">
   <top>
      <HBox prefHeight="42.0" prefWidth="890.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <ComboBox fx:id="cbClube" prefWidth="150.0" promptText="Clube">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </ComboBox>
            <Button fx:id="btnIrParaCadastro" mnemonicParsing="false" onAction="#irParaCadastroEstoque" text="Ir para Cadastro">
               <HBox.margin>
                  <Insets left="600.0" />
               </HBox.margin>
            </Button>
         </children>
         <BorderPane.margin>
            <Insets left="10.0" />
         </BorderPane.margin>
         <padding>
            <Insets top="9.0" />
         </padding>
      </HBox>
   </top>
   <center>
        <TableView fx:id="tblEstoque" prefHeight="394.0" prefWidth="717.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="colClubeNome" prefWidth="100.0" text="Clube" />
                <TableColumn fx:id="colModelo" prefWidth="100.0" text="Modelo" />
                <TableColumn fx:id="colTipo" prefWidth="100.0" text="Tipo" />
                <TableColumn fx:id="colP" prefWidth="75.0" text="P" />
                <TableColumn fx:id="colM" prefWidth="75.0" text="M" />
                <TableColumn fx:id="colG" prefWidth="75.0" text="G" />
                <TableColumn fx:id="colGG" prefWidth="75.0" text="GG" />
                <TableColumn fx:id="col2GG" prefWidth="75.0" text="2GG" />
                <TableColumn fx:id="col3GG" prefWidth="75.0" text="3GG" />
                <TableColumn fx:id="col4GG" prefWidth="75.0" text="4GG" />
                <TableColumn fx:id="colQuantidade" prefWidth="70.0" text="Total" />
            </columns>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
        </TableView>
   </center>
</BorderPane>
