<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="erp.CadastroProdutoController">
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER" />
   </center>
   <left>
      <VBox prefHeight="378.0" prefWidth="154.0" spacing="5.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Label text="Modelo" />
            <TextField fx:id="txtModelo" />
            <Label text="Clube" />
            <TextField fx:id="txtClube" />
            <Label text="Tamanho" />
            <ComboBox fx:id="cbTamanho" prefWidth="150.0" />
            <Label text="Público" />
            <ComboBox fx:id="cbPublicoAlvo" prefWidth="150.0" />
            <Label text="Quantidade" />
            <TextField fx:id="txtQuantidade" />
            <Label text="Valor" />
            <TextField fx:id="txtValor" />
            <Button fx:id="btnAdicionar" mnemonicParsing="false" onAction="#adicionarProduto" prefHeight="26.0" prefWidth="166.0" text="Adicionar ao Estoque" />
         </children>
      </VBox>
   </left>
   <bottom>
      <Button fx:id="btnInserir" mnemonicParsing="false" onAction="#inserirEstoque" text="Inserir" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" left="500.0" />
         </BorderPane.margin>
      </Button>
   </bottom>
   <right>
      <TableView fx:id="tblListaProdutos" prefHeight="354.0" prefWidth="419.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="colModelo" prefWidth="128.0" text="MODELO" />
          <TableColumn fx:id="colClube" prefWidth="72.79998779296875" text="CLUBE" />
            <TableColumn fx:id="colTamanho" prefWidth="52.0" text="TAM" />
            <TableColumn fx:id="colPublicoAlvo" prefWidth="56.0" text="PÚBLICO" />
            <TableColumn fx:id="colQuantidade" prefWidth="51.20001220703125" text="QTD" />
            <TableColumn fx:id="colValor" prefWidth="59.9998779296875" text="VALOR" />
        </columns>
         <BorderPane.margin>
            <Insets bottom="10.0" right="5.0" top="5.0" />
         </BorderPane.margin>
      </TableView>
   </right>
</BorderPane>
